{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": "\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>/apps/", "<rootDir>/libs/"],
  "moduleNameMapper": {
    "^@app/clients(|/.*)$": "<rootDir>/libs/clients/src/$1",
    "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
    "^@app/contracts(|/.*)$": "<rootDir>/libs/contracts/src/$1",
    "^@app/handlers(|/.*)$": "<rootDir>/libs/handlers/src/$1",
    "^@app/proto(|/.*)$": "<rootDir>/libs/proto/src/$1",
    "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
    "^@users(|/.*)$": "<rootDir>/apps/users/src/$1",
    "^@test/users(|/.*)$": "<rootDir>/apps/users/test/$1",
    "^@persistance/users": "<rootDir>/apps/users/generated/prisma"
  }
}
